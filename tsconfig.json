{
	"compilerOptions": {
		"outDir": "./build",
		"target": "ES2019",
		"module": "commonjs",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"alwaysStrict": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"typeRoots": [
			"./node_modules/@types",
			"./typings"
		]
	},
	"include": [
		"src/**/*"
	]
}
